{
  "family": "novus-api-production-task-definition",
  "volumes": [
    {
      "host": {
        "sourcePath": "/home/ec2-user/web-settings/production/novus-api-laravel/.env"
      },
      "name": "NovusApiVolume"
    }
  ],
  "containerDefinitions": [
    {
      "essential": true,
      "image": "wpsinc/novus-api-laravel:%REVISION%",
      "logConfiguration": {
        "logDriver": "json-file",
        "options": {
          "max-size": "50m"
        }
      },
      "memory": 100,
      "mountPoints": [
        {
          "sourceVolume": "NovusApiVolume",
          "containerPath": "/var/www/html/.env"
        }
      ],
      "name": "NovusApiLaravel"
    },
    {
      "essential": true,
      "image": "wpsinc/novus-api-nginx:latest",
      "links": [
        "NovusApiPhpFpm"
      ],
      "logConfiguration": {
        "logDriver": "json-file",
        "options": {
          "max-size": "50m"
        }
      },
      "memory": 200,
      "name": "NovusApiNginx",
      "portMappings": [
        {
          "hostPort": 60004,
          "containerPort": 80
        }
      ],
      "volumesFrom": [
        {
          "sourceContainer": "NovusApiLaravel"
        }
      ]
    },
    {
      "essential": true,
      "image": "wpsinc/novus-api-php-fpm:latest",
      "logConfiguration": {
        "logDriver": "json-file",
        "options": {
          "max-size": "50m"
        }
      },
      "memory": 600,
      "name": "NovusApiPhpFpm",
      "portMappings": [],
      "volumesFrom": [
        {
          "sourceContainer": "NovusApiLaravel"
        }
      ]
    }
  ]
}